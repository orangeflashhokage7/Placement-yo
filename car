SELECT car_name, COUNT(*) AS TotalRentalDays
FROM cars
WHERE car_id IN (
    SELECT car_id
    FROM rentals
    WHERE MONTH(pickup_date) = 5
    GROUP BY car_id
    HAVING COUNT(*) = (
        SELECT MAX(NumDays)
        FROM (
            SELECT car_id, COUNT(*) AS NumDays
            FROM rentals
            WHERE MONTH(pickup_date) = 5
            GROUP BY car_id
        ) AS MaxDaysSubquery
    )
)
GROUP BY car_name;
